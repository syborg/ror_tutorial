<p id="notice"><%= notice %></p>

<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <% if signed_in? %>
        <table>
          <tr>
            <td><%= render 'follow_form' %></td>
            <td><%= button_to 'Reply', reply_user_path(@user), :method => :get %></td>
            <td><%= button_to 'Message', message_user_path(@user), :method => :get %></td>
          </tr>
        </table>
      <% end %>
      <% unless @microposts.empty? %>
        <table class="microposts" summary="User microposts">
          <%= render @microposts %>
        </table>
        <%= will_paginate @microposts %>
      <% end %>
    </td>
    <td class="sidebar round">
      <strong>Name</strong> <%= @user.name %><br />
      <strong>Email</strong> <%= @user.email %><br />
      <strong>URL</strong>  <%= link_to user_path(@user) %><br />
      <strong>Microposts</strong> <%= @user.microposts.count %>
      <%= render :partial => 'shared/stats', :object => @user %>
    </td>
  </tr>
</table>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

