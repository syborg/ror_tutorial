<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header' %>
      <section class="round">
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>

      <% if Rails.env.development? %>
        <div class = "notice round prepend-1">
          <h4>Params</h4>
          <%= debug(params) %>
          <h4>Session</h4>
          <%= debug(session) %>
        </div>  
      <% end %>

    </div>
  </body>
</html>