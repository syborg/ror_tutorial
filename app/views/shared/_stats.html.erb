<% @user ||= current_user %>
<div class="stats">
  <table summary="User stats">
    <tr>
      <td>
        <a href="<%= following_user_path(stats) %>">
          <span id="following" class="stat">
            <%= stats.following.count %> following
          </span>
        </a>
      </td>
      <td>
        <a href="<%= followers_user_path(stats) %>">
          <span id="followers" class="stat">
            <%= pluralize(stats.followers.count, "follower") %>
          </span>
        </a>
      </td>
    </tr>
  </table>
</div>
