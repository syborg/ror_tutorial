    <div class="user_info">
      <a href="<%= user_path(user_info) %>">
        <%= gravatar_for user_info, :size => 30 %>
        <span class="user_name">
          <%= user_info.name %>
        </span>
      </a>
      <span class="microposts">
        <%= pluralize(user_info.microposts.count, "micropost") %>
      </span><br />
      <%= render :partial => "shared/stats", :object => user_info %>
    </div>