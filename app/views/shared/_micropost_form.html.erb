<%= form_for(micropost_form) do |f| %>
  <% if micropost_form.errors.any? %>
    <%= render :partial=>'shared/error_messages', :object => micropost_form.errors %>
  <% end %>
  <div class="field">
    <%= f.text_area :content, :onkeyup=>'charsleft(this)'  %>
  </div>
  <div class="actions">
    <%= f.submit "Submit"%>
  </div>
  <!-- S'actualitza amb el numero de caracters escrits -->
  <div id="charNum">0</div>
<% end %>
